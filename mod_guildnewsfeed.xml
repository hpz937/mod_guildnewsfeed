        <authorUrl>soylentcode.com</authorUrl> 
        <version>0.1.4</version> 
        <description>Guild News Feed</description>
        <files>
                <filename module="mod_guildnewsfeed">mod_guildnewsfeed.php</filename>
                <filename>index.html</filename>
                <filename>helper.php</filename>
                <filename>tmpl/default.php</filename>
                <filename>tmpl/index.html</filename>
        </files>
        <params>
           <param name="realm" type="text" default="Whisperwind" label="Realm Name" description="Realm Name" />
           <param name="region" type="list" default="us" label="Region" description="Country Region">
             <option value="us">us</option>
             <option value="eu">eu</option>
           </param>           
           <param name="updatetimer" type="text" default="10" label="Update Timer" description="Minutes Between Updates" />           
		   <param name="displaycount" type="text" default="10" label="Items to Show" description="Items to Show" />
        </params>
</install>
